{
  "manifest_version": 2,

  "name": "Simple Project Tasks",
  "short_name": "Simple Project Tasks",
  "description": "Create project and tasks, fast and easy!... And yes it's FREE!!!",
  "version": "1.0.7",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [    
    "storage"
  ],

"icons": { 
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
"background":
{
  "scripts":["background.js"]
}
}